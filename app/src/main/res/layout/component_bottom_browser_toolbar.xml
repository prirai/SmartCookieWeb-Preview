<?xml version="1.0" encoding="utf-8" ?>
<com.cookiejarapps.android.smartcookieweb.components.toolbar.BottomToolbarContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
>

    <!-- Tab Groups Bar positioned above address bar -->
    <com.cookiejarapps.android.smartcookieweb.browser.tabgroups.TabGroupBar
        android:id="@+id/tabGroupBarIntegrated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
    />

    <!-- Address Bar -->
    <mozilla.components.browser.toolbar.BrowserToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/browser_toolbar_height"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="?attr/colorSurface"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:browserToolbarClearColor="?android:attr/textColorPrimary"
        app:browserToolbarInsecureColor="?android:attr/textColorPrimary"
        app:browserToolbarMenuColor="?android:attr/textColorPrimary"
        app:browserToolbarProgressBarGravity="top"
        app:browserToolbarSecureColor="?android:attr/textColorPrimary"
        app:browserToolbarTrackingProtectionAndSecurityIndicatorSeparatorColor="?android:attr/textColorSecondary"
    />

    <!-- Contextual Bottom Toolbar -->
    <com.cookiejarapps.android.smartcookieweb.toolbar.ContextualBottomToolbar
        android:id="@+id/contextualBottomToolbarIntegrated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
    />

</com.cookiejarapps.android.smartcookieweb.components.toolbar.BottomToolbarContainerView>
